<% layout("/layouts/boilerplate") %>
<body>
  <div class="row mt-3">
    <div class="offset-2 col-8">
      <h3>Edit your Listing</h3>
      <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
        <div class="mb-2">
          <label for="title" class="form-label">Title</label>
          <input
            name="listing[title]"
            class="form-control"
            value="<%= listing.title %>"
            type="text"
          />
        </div>
        <div class="mb-2">
          <label for="description" class="form-label">Description</label>
          <textarea class="form-control" name="listing[description]">
<%= listing.description %></textarea
          >
        </div>
        <div class="mb-2">
          <label for="description" class="form-label">Description</label>
          <input
            name="listing[image]"
            class="form-control"
            value="<%= listing.image %>"
            type="text"
          />
        </div>
        <div class="row">
          <div class="mb-2 col-md-4">
            <label for="description" class="form-label">Description</label>
            <input
              name="listing[price]"
              class="form-control"
              value="<%= listing.price %>"
              type="number"
            />
          </div>
          <div class="mb-2 col-md-8">
            <label for="description" class="form-label">Description</label>
            <input
              name="listing[country]"
              value="<%= listing.country %>"
              type="text"
              class="form-control"
            />
          </div>
        </div>
        <div class="mb-4">
          <label for="description" class="form-label">Description</label>
          <input
            name="listing[location]"
            value="<%= listing.location %>"
            type="text"
            class="form-control"
          />
        </div>
        <button
          style="background-color: red; color: aliceblue"
          class="mb-3 btn"
        >
          Edit
        </button>
      </form>
    </div>
  </div>
</body>
