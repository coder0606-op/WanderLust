<% layout("/layouts/boilerplate") %>

<body>
  <h3>All Listings</h3>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for (let listing of allListing) { %>
      <a style="text-decoration: none;" href="/listings/<%= listing._id %>">
    <div class="card border-0" style=" margin-bottom: 2rem">
      <img
        class="card-img"
        style="
          border-radius: 25px; /* Rounded corners */
          width: 100%;
          height: 20rem;
          object-fit: cover;
        "
        src="<%= listing.image %>"
        alt="listing_image"
      />
      <div class="card-body" style="padding: 0">
        <b><p class="card-text">
          <%= listing.title %></b>
          <br />
          &#8377; <%= listing.price %>/night
        </p>
      </div>
    </div>
    </a>
    <% } %>
  </div>
</body>
